  <div class="mx-5 d-flex justify-content-center">
    <div class="mx-3 col-md-6 ">
      <form action="/admin/editproduct" method="POST">

        <div class="row">
          <div class="form-group my-3 col-md-6">
            <label for="Brand">Brand</label>
            <input type="text" class="form-control form-control-sm" id="nameInput" name="brand"
              value="<%= product.brand %>">
          </div>
          <div class="form-group my-3 col-md-6">
            <label for="model">Model</label>
            <input type="text" pattern="^[A-Za-z0-9\s\-]+$" class="form-control form-control-sm" id="nameInput"
              name="model" value="<%= product.model %>">
          </div>
        </div>

        <div class="row">
          <div class="form-group my-3 col-md-3">
            <label for="price">Price</label>
            <input type="text" pattern="^[1-9]\d*$" class="form-control form-control-sm" id="nameInput" name="price"
              value="<%= product.price %>">
          </div>

          <div class="form-group my-3 col-md-3">
            <label for="stock">Add Stock</label>
            <input type="text" pattern="^[0-9]\d*$" class="form-control form-control-sm" id="nameInput" value="0"
              name="stock" required>
          </div>
        </div>

        <div class="row">
          <div class="form-group my-3 col-md-6">
            <label for="category">Category</label>
            <select class="form-select form-control-sm" id="CategoryInput" name="category" required>
              <% category.forEach((cat)=> { %>
                <option <%= cat.category===product.category ? 'selected' : '' %> ><%= cat.category %>
                </option>
                <% }) %>
            </select>
          </div>
          <div class="form-group my-3 col-md-4">
            <label for="color">Color</label>
            <input class="form-control form-control-md" id="colorinput" name="color" value="<%= product.color %>"
              required>
          </div>
        </div>
        <div class="form-group my-3">
          <label for="descriptionInput">Specification</label>
          <textarea class="form-control form-control-sm" id="descriptionInput" name="specification" rows="3"
            required><%= product.specification %></textarea>
        </div>

        <button type="submit" class="btn btn-primary my-3">Submit</button>
      </form>

    </div>
  </div>