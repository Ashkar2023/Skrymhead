<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>SKRYMHEAD</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
	<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
	<style>
		#logo {
			margin-right: 5px;
		}

		body {
			background-color: black;
		}
	</style>
</head>

<body>

	<nav class=" navbar navbar-expand-lg bg-dark sticky-top">
		<a class="text-white navbar-brand" href="" style="padding-left: 15px; font-family: 'Lucida Sans'">
			<td>
				<h2 class=""><img src="/LOGO.png" id="logo" height="30px" alt="Logo">SKRYMHEAD</h2>
			</td>
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
			aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<td class="navbar-toggler-icon"></td>
		</button>
		<div class="collapse navbar-collapse" style="padding-right: 15px; margin-right: 10px;"
			id="navbarSupportedContent">
			<ul class="navbar-nav navbar-light ms-auto ">
				<li class="nav-item ">
					<a href="/admin/dashboard" class="m-2" style="text-decoration: none; ">Dashboard
					</a>

				</li>
				<li class="nav-item ">
					<a href="/admin/products" class="m-2" style="text-decoration: none; ">Product</a>

				</li>
				<li class="nav-item active">
					<a href="/admin/category" class="m-2" style="text-decoration: none; ">Category
					</a>

				</li>
				<li class="nav-item">
					<a href="/admin/users" class="m-2" style="text-decoration: none; ">Users
					</a>

				</li>
				<li class="nav-item">
					<a href="/admin/orders" class="m-2" style="text-decoration: none; ">Orders</a>
				</li>
				<li class="nav-item">
					<a href="/admin/logout" class="m-2" style="text-decoration: none; ">logout
					</a>

				</li>
			</ul>
		</div>
	</nav>

	<div class="container">
		<div class="row">
			<div class="col-md-10 pt-2">
				<h1 class="text-white">PRODUCTS</h1>

			</div>
			<div class="col-md-2 pt-5 d-flex justify-content-center align-items-center">
				<a href="/admin/addproduct" style="text-decoration: none;">Add Product</a>
			</div>
		</div>
	</div>

	<div class="container ">
		<div class="m-3 mt-5 px-4 text-center col-md-12">
			<table class="table table-dark table-bordered border">
				<thead class="table-light" style="font-family: Arial, Helvetica, sans-serif;">
					<tr>
						<th scope="col"></th>
						<th scope="col">Brand</th>
						<th scope="col">Model</th>
						<th scope="col">Price</th>
						<th scope="col">Stock</th>
						<th scope="col">Category</th>
						<th scope="col">Color</th>
						<th colspan="2">Action</th>
					</tr>
				</thead>

				<tbody style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">
					<% products.forEach((product)=>{ %>
						<% let v=product.variants,totalStock=0; %>

							<tr>
								<td style="background-color: azure;"><img
										src="/products/<%= product.brand+' '+product.model %>/<%= product.images[0].url %>"
										width="60px" style="border-radius: 20%;" alt="image"></td>
								<td>
									<%= product.brand %>
								</td>
								<td>
									<%= product.model %>
								</td>

								<td>

									<% if( v.length==1 || v[0].price==v[1].price || (v[0].price==v[1].price &&
										v[1].price==v[2].price) ){ %>
										<h6 class="text-white">&#8377; <%= product.variants[0].price %>
										</h6>
										<% }else{ %>
											<div class="price-details">
												<% for(let i=0;i < v.length;i++){ %>
													<h6><span class="text-success">V<%= i+1 %> : </span>&#8377; <%=
															product.variants[i].price %>
													</h6>
											</div>
											<% } %>
												<% } %>
								</td>

								<td>
									<% if( v.length==1 ){ %>
										<h6 class="border text-white"><span class="text-success">TOTAL : </span>
											<%= product.variants[0].stock %>
										</h6>
										<% }else{ %>
											<div class="stock-details">
												<% for(let i=0;i < v.length;i++){ %>
													<h6><span class="text-success">V<%= i+1 %> : </span>
														<%= product.variants[i].stock %>
													</h6>
											</div>
											<% totalStock+=product.variants[i].stock; } %>
												<h6 class="border"><span class="text-success">TOTAL : </span>
													<%= totalStock %>
												</h6>
												<% } %>
								</td>

								<td>
									<%= product.category.category %>
								</td>

								<td>
									<div class="text-center">
										<% if (v.length===1 || (v[0].color===v[1].color && v[1].color===v[2].color)) {
											%>
											<div class="d-flex mb-1">
												<div class="text-success">V1</div>
												<div class="col border ms-2"
													style="max-width: 30px; height: 25px; background-color: <%= product.variants[0].color %> ">
												</div>
											</div>
											<% } else { %>
												<div class="color-details">
													<% for (let i=0; i < v.length; i++) { %>
														<div class="d-flex mb-1">
															<div class="text-success">V<%= i + 1 %>
															</div>
															<div class="col border ms-2"
																style="max-width: 30px; height: 25px; background-color: <%= product.variants[i].color %> ">
															</div>
														</div>
														<% } %>
												</div>
												<% } %>
									</div>
								</td>

								<td>
									<a href="/admin/editproduct?id=<%= product._id %>"><button
											class="btn btn-sm btn-primary">Edit</button></a>
									<button data-product-id='<%= product._id %>'
										class="btn ms-3 btn-sm <%= product.listed? 'btn-danger':'btn-success' %>"
										onclick="listOrUnlist('<%= product._id %>')"
										data-bool="<%= product.listed %>"><%- product.listed? "Unlist" : "List" ; %>
									</button>
								</td>
							</tr>
							<% }) %>
								<script>
									function listOrUnlist(id) {
										const button = document.querySelector(`button[data-product-id="${id}"]`);
										const BOOL = button.dataset.bool;

										fetch("/admin/editproduct/lou", {
											method: "PUT",
											headers: {
												"Content-type": "application/json",
											},
											body: JSON.stringify({
												id: id,
												bool: BOOL
											})
										})
											.then(response => {
												if (response.ok) {
													return response.json();
												} else {
													throw new Error("Couldn't Update product")
												};
											})
											.then(data => {
												if (data.message) {

													if (data.listed) {
														button.classList.remove('btn-success');
														button.classList.add('btn-danger');
													} else {
														button.classList.remove('btn-danger');
														button.classList.add('btn-success');
													}
													button.dataset.bool = String(data.listed);
													button.textContent = data.listed ? 'Unlist' : 'List';

													Toastify({
														text: data.message,
														duration: 1300,
														gravity: "top",
														position: "right",
														backgroundColor: "#03c03c",
														stopOnFocus: true,
														offset: {
															y: 30
														}
													}).showToast();
												}
											})
											.catch(error => {
												console.log(error.message)
												Toastify({
													text: error.message,
													duration: 1300,
													gravity: "top",
													position: "right",
													backgroundColor: "#ff0000",
													stopOnFocus: true,
													offset: {
														y: 30
													}
												}).showToast();
											})
									}
								</script>
				</tbody>

			</table>
		</div>
	</div>
	<script>
		let expected = "http://localhost:8000/admin/addproduct";
		let q = new URLSearchParams(window.location.search);
		let success = q.get("success");
		sessionStorage.setItem("shown",true);
		let shown = sessionStorage.getItem("shown");
		
		if (document.referrer.includes(expected) && success === 'true' && shown === true ) {
			Toastify({
				text: "Product added successfully",
				duration: 1500,
				gravity: "top",
				position: "center",
				backgroundColor: "#12BA85",
				stopOnFocus: true,
				offset: {
					y: 20
				}
			}).showToast();
			sessionStorage.setItem("shown",false);
		}
	</script>

	<% include('../layouts/footer.ejs') %>