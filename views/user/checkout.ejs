	<script>
		function placeOrder() {
			const address = document.querySelector('input[name="address"]:checked');

			function validatePayment() {
				const codRadioButton = document.getElementById('COD');
				if (!codRadioButton.checked) {
					Toastify({
						text: "Select a payment Method",
						duration: 3000,
						gravity: "top",
						position: "right",
						backgroundColor: "#fff",
						stopOnFocus: true,
						style: {
							color:"#000000",
							border: "2px solid #ff6347",
							margin: "80px 30px",
						}
					}).showToast();

					return false;
				} else {
					return true;
				}
			}
			if (!validatePayment()) return false;

			const paymentOption = document.querySelector('input[name="paymentoptions"]:checked');
			const addressSelected = document.querySelector("input[name='address']:checked");
			fetch("/order", {
				method: "PUT",
				headers: {
					"Content-Type": "application/json"
				},
				body: JSON.stringify({
					addressName: address.value,
					payment: paymentOption.value,
					address:addressSelected.value,
					total:TOTAL
				})
			})
				.then(response => {
					if (response.ok) {
						return response.json()
					}
				})
				.then(data => {
					if (data.success) {
						swal.fire({
							title: "Order placed successfully!",
							text: `OrderID : #${data.orderId}`,
							icon: "success",
							confirmButtonText: "Show My Orders",
							showDenyButton: true,
							denyButtonText: "Go to home",
							allowOutsideClick: false
						}).then((result) => {
							if (result.isConfirmed) {
								window.location.href = "/orders"
							} else if (result.isDenied) {
								window.location.href = "/home"
							}
						})
					} else {
						swal.fire({
							title: "Order Unsuccessful!",
							text: `Please retry`,
							icon: "error",
							confirmButtonText: "OK"
						});
					}
				})
				.catch(error => {
					console.log(error.message);
				})
		}
	</script>


